<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <ImageView
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:scaleType="fitXY"
        android:src="@drawable/bongua"
        android:id="@+id/imageviewHinhgoc"
        android:layout_width="200dp"
        android:layout_height="200dp" />
    <TextView
        android:id="@+id/textview"
        android:background="#454544"
        android:textColor="#49be9b"
        android:layout_marginTop="20dp"
        android:layout_below="@id/imageviewHinhgoc"
        android:gravity="center"
        android:textSize="25sp"
        android:textAllCaps="true"
        android:text="Chọn hình ảnh bên dưới"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/imageviewHinhchon"
        android:scaleType="fitXY"
        android:src="@drawable/nophoto"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_below="@id/textview"
        android:layout_width="200dp"
        android:layout_height="200dp" />
</RelativeLayout>